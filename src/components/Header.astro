            <div class="mega-menu-content backdrop-blur-3xl bg-background/95 border border-primary/30 rounded-2xl p-8 shadow-2xl max-w-ultra mx-auto">
              <div class="grid grid-cols-3 gap-8">
                <!-- Switch Types -->
                <div class="space-y-4">
                  <h3 class="text-lg font-bold text-accent mb-4 flex items-center">
                    <div class="w-2 h-2 neon-blue rounded-full stellar-glow mr-2"></div>
                    Switch Types
                  </h3>
                  <div class="space-y-2">
                    <a href="/switches/linear" class="mega-menu-link block p-3 rounded-lg hover:bg-white/5 transition-all duration-200">
