<style>
  /* Starfield animation for footer */
  .starfield-footer {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: 
      radial-gradient(1px 1px at 20% 30%, rgba(255, 255, 255, 0.2), transparent),
      radial-gradient(1px 1px at 40% 70%, rgba(58, 155, 220, 0.3), transparent),
      radial-gradient(1px 1px at 90% 40%, rgba(143, 110, 213, 0.2), transparent),
      radial-gradient(1px 1px at 130% 80%, rgba(255, 255, 255, 0.1), transparent),
      radial-gradient(1px 1px at 160% 30%, rgba(58, 155, 220, 0.2), transparent);
    background-repeat: repeat;
    background-size: 150px 80px, 200px 120px, 180px 90px, 220px 110px, 250px 130px;
    animation: drift 30s ease-in-out infinite;
  }

  /* Small orbital animation for footer logo */
  .orbital-small {
    animation: orbit 12s linear infinite;
  }

  /* Drift animation for stars */
  @keyframes drift {
    0%, 100% {
      transform: translateX(0) translateY(0);
    }
    25% {
      transform: translateX(10px) translateY(-5px);
    }
    50% {
      transform: translateX(-5px) translateY(10px);
    }
    75% {
      transform: translateX(-10px) translateY(-5px);
    }
  }

  /* Enhanced glow effects on hover */
  .glass:hover {
    box-shadow: 0 0 20px rgba(58, 155, 220, 0.2);
  }

  /* Responsive adjustments */
  @media (max-width: 768px) {
    .starfield-footer {
      background-size: 100px 60px, 130px 80px, 120px 70px, 140px 90px, 160px 100px;
    }
  }

  /* Subtle pulse animation for social links */
  .glass {
    animation: subtle-pulse 4s ease-in-out infinite;
  }

  @keyframes subtle-pulse {
    0%, 100% {
      opacity: 0.8;
    }
    50% {
      opacity: 1;
    }
  }

  /* Stagger the pulse animation */
  .glass:nth-child(2) {
    animation-delay: 0.5s;
  }

  .glass:nth-child(3) {
    animation-delay: 1s;
  }

  .glass:nth-child(4) {
    animation-delay: 1.5s;
  }

  .glass:nth-child(5) {
    animation-delay: 2s;
  }
</style>

<script>
  // Add some interactivity to the footer
  const socialLinks = document.querySelectorAll('footer .glass');
  
  socialLinks.forEach(link => {
    link.addEventListener('mouseenter', () => {
      link.style.transform = 'translateY(-2px) scale(1.05)';
      link.style.transition = 'all 0.2s ease-out';
    });
    
    link.addEventListener('mouseleave', () => {
      link.style.transform = 'translateY(0) scale(1)';
    });
  });

  // Floating elements effect on scroll
  let ticking = false;
  
  function updateFooterEffects() {
    const footer = document.querySelector('footer');
    const scrolled = window.pageYOffset;
    const rate = scrolled * -0.5;
    
    if (footer) {
      const starfield = footer.querySelector('.starfield-footer');
      if (starfield) {
        starfield.style.transform = `translateY(${rate}px)`;
      }
    }
    
    ticking = false;
  }
  
  function requestTick() {
    if (!ticking) {
      requestAnimationFrame(updateFooterEffects);
      ticking = true;
    }
  }
  
  window.addEventListener('scroll', requestTick);
</script>