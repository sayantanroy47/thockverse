<style>
  /* Enhanced footer deep space */
  .starfield-footer {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: 
      radial-gradient(2px 2px at 20% 30%, rgba(240, 246, 252, 0.6), transparent),
      radial-gradient(1px 1px at 40% 70%, rgba(100, 149, 237, 0.5), transparent),
      radial-gradient(1px 1px at 90% 40%, rgba(255, 147, 41, 0.4), transparent),
      radial-gradient(1px 1px at 130% 80%, rgba(176, 196, 222, 0.6), transparent),
      radial-gradient(2px 2px at 160% 30%, rgba(255, 218, 185, 0.3), transparent),
      radial-gradient(1px 1px at 70% 15%, rgba(72, 118, 255, 0.5), transparent),
      radial-gradient(1px 1px at 25% 85%, rgba(240, 246, 252, 0.4), transparent);
    background-repeat: repeat;
    background-size: 180px 120px, 220px 140px, 200px 110px, 240px 130px, 270px 150px, 320px 180px, 190px 120px;
    animation: none;
  }
  

  /* Small orbital animation for footer logo - hover triggered */
  .orbital-small {
    animation: none;
    transition: transform 0.3s ease;
  }
  
  .orbital-small:hover {
    animation: orbit 3s linear infinite;
  }

  /* Enhanced cosmic drift animation */
  @keyframes cosmic-drift {
    0%, 100% {
      transform: translateX(0) translateY(0) rotate(0deg);
    }
    25% {
      transform: translateX(15px) translateY(-10px) rotate(90deg);
    }
    50% {
      transform: translateX(-10px) translateY(15px) rotate(180deg);
    }
    75% {
      transform: translateX(-15px) translateY(-8px) rotate(270deg);
    }
  }
  
  @keyframes footer-twinkle {
    0%, 100% {
      opacity: 0.7;
    }
    25% {
      opacity: 0.9;
    }
    50% {
      opacity: 1;
    }
    75% {
      opacity: 0.8;
    }
  }
  
  @keyframes footer-drift {
    0%, 100% {
      transform: translateX(0) translateY(0);
    }
    25% {
      transform: translateX(-8px) translateY(-4px);
    }
    50% {
      transform: translateX(5px) translateY(-6px);
    }
    75% {
      transform: translateX(-3px) translateY(3px);
    }
  }
  

  /* Epic enhanced glow effects on hover */
  .glass:hover {
    box-shadow: 
      0 0 20px rgba(0, 255, 255, 0.4),
      0 0 40px rgba(255, 20, 147, 0.2),
      inset 0 0 10px rgba(57, 255, 20, 0.1);
    transform: translateY(-3px) scale(1.05);
  }

  /* Responsive adjustments */
  @media (max-width: 768px) {
    .starfield-footer {
      background-size: 100px 60px, 130px 80px, 120px 70px, 140px 90px, 160px 100px;
    }
  }

  /* Epic neon pulse animation for social links - hover triggered */
  .glass {
    animation: none;
    border: 1px solid transparent;
    transition: all 0.3s cubic-bezier(0.25, 0.46, 0.45, 0.94);
  }
  
  .glass:hover {
    animation: neon-pulse-social 3s ease-in-out infinite;
  }

  @keyframes neon-pulse-social {
    0%, 100% {
      opacity: 0.8;
      border-color: rgba(0, 255, 255, 0.2);
      box-shadow: 0 0 5px rgba(0, 255, 255, 0.1);
    }
    33% {
      border-color: rgba(255, 20, 147, 0.3);
      box-shadow: 0 0 10px rgba(255, 20, 147, 0.2);
    }
    66% {
      border-color: rgba(57, 255, 20, 0.3);
      box-shadow: 0 0 8px rgba(57, 255, 20, 0.2);
    }
  }

  /* Stagger the neon pulse animation */
  .glass:nth-child(1) { animation-delay: 0s; }
  .glass:nth-child(2) { animation-delay: 0.8s; }
  .glass:nth-child(3) { animation-delay: 1.6s; }
  .glass:nth-child(4) { animation-delay: 2.4s; }
  .glass:nth-child(5) { animation-delay: 3.2s; }
</style>

<script>
  // Epic footer interactivity with neon effects
  const socialLinks = document.querySelectorAll('footer .glass');
  const neonColors = [
    'rgb(0, 255, 255)',    // cyan
    'rgb(255, 20, 147)',   // pink  
    'rgb(57, 255, 20)',    // green
    'rgb(255, 255, 0)',    // yellow
    'rgb(138, 43, 226)'    // purple
  ];
  
  socialLinks.forEach((link, index) => {
    const color = neonColors[index % neonColors.length];
    
    link.addEventListener('mouseenter', () => {
      link.style.transform = 'translateY(-5px) scale(1.1)';
      link.style.transition = 'all 0.3s cubic-bezier(0.25, 0.46, 0.45, 0.94)';
      link.style.boxShadow = `0 0 30px ${color.replace('rgb', 'rgba').replace(')', ', 0.6)')}`;
      
      // Create neon particle burst
      createParticleBurst(link, color);
    });
    
    link.addEventListener('mouseleave', () => {
      link.style.transform = 'translateY(0) scale(1)';
      link.style.boxShadow = '';
    });
  });

  // Epic particle burst effect
  function createParticleBurst(element, color) {
    const rect = element.getBoundingClientRect();
    const centerX = rect.left + rect.width / 2;
    const centerY = rect.top + rect.height / 2;
    
    for (let i = 0; i < 8; i++) {
      const particle = document.createElement('div');
      const angle = (i / 8) * Math.PI * 2;
      const distance = 20 + Math.random() * 15;
      
      particle.style.cssText = `
        position: fixed;
        left: ${centerX}px;
        top: ${centerY}px;
        width: 2px;
        height: 2px;
        background: ${color};
        border-radius: 50%;
        pointer-events: none;
        z-index: 9999;
        box-shadow: 0 0 6px ${color};
        animation: particle-burst 0.6s ease-out forwards;
      `;
      
      particle.style.setProperty('--end-x', Math.cos(angle) * distance + 'px');
      particle.style.setProperty('--end-y', Math.sin(angle) * distance + 'px');
      
      document.body.appendChild(particle);
      setTimeout(() => particle.remove(), 600);
    }
  }

  // Enhanced parallax and cosmic effects
  let ticking = false;
  
  function updateFooterEffects() {
    const footer = document.querySelector('footer');
    const scrolled = window.pageYOffset;
    const footerRect = footer?.getBoundingClientRect();
    
    if (footer && footerRect) {
      const starfield = footer.querySelector('.starfield-footer');
      
      // Parallax effects with different speeds
      if (starfield) {
        const rate = scrolled * -0.3;
        starfield.style.transform = `translateY(${rate}px) rotate(${scrolled * 0.01}deg)`;
      }
      
      
      // Add pulsing effect when footer is in view
      if (footerRect.top < window.innerHeight) {
        const visibility = Math.max(0, Math.min(1, (window.innerHeight - footerRect.top) / window.innerHeight));
        footer.style.setProperty('--visibility', visibility);
      }
    }
    
    ticking = false;
  }
  
  function requestTick() {
    if (!ticking) {
      requestAnimationFrame(updateFooterEffects);
      ticking = true;
    }
  }
  
  window.addEventListener('scroll', requestTick);
  
  // Glitch effect for logo
  document.querySelectorAll('.glitch-on-hover').forEach(element => {
    element.addEventListener('mouseenter', () => {
      element.classList.add('glitch');
      setTimeout(() => element.classList.remove('glitch'), 800);
    });
  });
  
  // Random cosmic flickers
  setInterval(() => {
    const footer = document.querySelector('footer');
    if (footer && Math.random() < 0.3) {
      footer.style.filter = 'brightness(1.1) saturate(1.2)';
      setTimeout(() => {
        footer.style.filter = '';
      }, 100);
    }
  }, 3000);
  
  // Add particle burst animation keyframes
  const style = document.createElement('style');
  style.textContent = `
    @keyframes particle-burst {
      0% {
        opacity: 1;
        transform: translate(0, 0) scale(1);
      }
      100% {
        opacity: 0;
        transform: translate(var(--end-x), var(--end-y)) scale(0);
      }
    }
  `;
  document.head.appendChild(style);
</script>