---
// Tutorials collection page - Browse all tutorial articles
import BaseLayout from '../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

// Get all tutorial articles
const tutorials = (await getCollection('tutorials'))
  .filter(tutorial => !tutorial.data.draft)
  .sort((a, b) => new Date(b.data.date).getTime() - new Date(a.data.date).getTime());

const featuredTutorials = tutorials.filter(tutorial => tutorial.data.featured);
const recentTutorials = tutorials.filter(tutorial => !tutorial.data.featured);
---

<BaseLayout 
  title="Tutorials - Learn Mechanical Keyboards | Thockverse"
  description="Comprehensive tutorials and guides for mechanical keyboard enthusiasts. Learn everything from beginner basics to advanced customization techniques."
>
  <div class="max-w-7xl mx-auto space-y-12">
    
    <!-- Page Header -->
    <div class="text-center space-y-6 py-12">
      <div class="space-y-4">
        <h1 class="text-4xl lg:text-6xl font-bold text-gradient leading-tight">
          Mechanical Keyboard Tutorials
        </h1>
        <p class="text-xl text-muted-foreground max-w-3xl mx-auto leading-relaxed">
          Master the art of mechanical keyboards with our comprehensive guides. From beginner basics to advanced modding techniques.
        </p>
      </div>
      
      <!-- Stats -->
      <div class="flex justify-center items-center space-x-8 text-sm text-muted-foreground">
        <div class="flex items-center space-x-2">
          <div class="w-2 h-2 bg-primary-500 rounded-full"></div>
          <span>{tutorials.length} Tutorials</span>
        </div>
        <div class="flex items-center space-x-2">
          <div class="w-2 h-2 bg-accent-500 rounded-full"></div>
          <span>{featuredTutorials.length} Featured</span>
        </div>
      </div>
    </div>

    <!-- Featured Tutorials -->
    {featuredTutorials.length > 0 && (
      <section class="space-y-6">
        <div class="flex items-center space-x-3">
          <div class="w-2 h-2 bg-accent-500 rounded-full animate-pulse"></div>
          <h2 class="text-3xl font-bold text-gradient">Featured Tutorials</h2>
        </div>
        
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
          {featuredTutorials.slice(0, 2).map((tutorial, index) => (
            <article key={index} class="glass-dark rounded-2xl overflow-hidden hover:scale-[1.02] transition-all duration-500 group">
              <div class="lg:flex lg:h-80">
                <!-- Tutorial Image -->
                <div class="lg:w-2/5 relative">
                  <div class="aspect-video lg:aspect-square bg-gradient-to-br from-primary-500/20 to-accent-500/20 flex items-center justify-center overflow-hidden">
                    {tutorial.data.heroImage ? (
                      <img 
                        src={tutorial.data.heroImage}
                        alt={tutorial.data.title}
                        class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-700"
                        loading="eager"
                      />
                    ) : (
                      <div class="w-20 h-14 bg-gradient-to-br from-primary-400 to-accent-400 rounded-lg shadow-2xl neon-glow"></div>
                    )}
                  </div>
                  
                  <!-- Difficulty Badge -->
                  {tutorial.data.difficulty && (
                    <div class="absolute top-4 right-4 px-3 py-1 glass rounded-full text-sm font-medium capitalize">
                      {tutorial.data.difficulty}
                    </div>
                  )}
                </div>
                
                <!-- Tutorial Content -->
                <div class="lg:w-3/5 p-6 space-y-4">
                  <div class="space-y-2">
                    <div class="flex items-center space-x-2 text-sm">
                      <span class="px-2 py-1 bg-primary-500/20 text-primary-300 rounded-full text-xs font-medium">
                        Tutorial
                      </span>
                      {tutorial.data.estimatedTime && (
                        <>
                          <span class="text-muted-foreground">â€¢</span>
                          <span class="text-muted-foreground">{tutorial.data.estimatedTime}</span>
                        </>
                      )}
                    </div>
                    
                    <h3 class="text-xl lg:text-2xl font-bold text-foreground group-hover:text-primary-400 transition-colors duration-300">
                      {tutorial.data.title}
                    </h3>
                  </div>
                  
                  <p class="text-muted-foreground leading-relaxed line-clamp-3">
                    {tutorial.data.description}
                  </p>
                  
                  <!-- Tags -->
                  {tutorial.data.tags && tutorial.data.tags.length > 0 && (
                    <div class="flex flex-wrap gap-1">
                      {tutorial.data.tags.slice(0, 3).map((tag) => (
                        <span key={tag} class="px-2 py-1 text-xs bg-accent-500/10 text-accent-300 rounded">
                          {tag}
                        </span>
                      ))}
                    </div>
                  )}
                  
                  <div class="flex items-center justify-between pt-2">
                    <div class="flex items-center space-x-2 text-sm text-muted-foreground">
                      <span>By {tutorial.data.author}</span>
                    </div>
                    
                    <a 
                      href={`/posts/${tutorial.slug}`}
                      class="inline-flex items-center space-x-2 text-primary-400 hover:text-primary-300 font-medium transition-colors duration-200"
                    >
                      <span>Start Tutorial</span>
                      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                      </svg>
                    </a>
                  </div>
                </div>
              </div>
            </article>
          ))}
        </div>
      </section>
    )}

    <!-- All Tutorials Grid -->
    <section class="space-y-6">
      <div class="flex items-center space-x-3">
        <div class="w-2 h-2 bg-primary-500 rounded-full animate-pulse"></div>
        <h2 class="text-3xl font-bold text-gradient">All Tutorials</h2>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        {recentTutorials.map((tutorial, index) => (
          <article key={index} class="switch-card group cursor-pointer float-animation" style={`animation-delay: ${index * 0.1}s`}>
            <!-- Tutorial Image -->
            <div class="aspect-video bg-gradient-to-br from-primary-500/20 to-accent-500/20 rounded-lg mb-4 overflow-hidden">
              {tutorial.data.heroImage ? (
                <img 
                  src={tutorial.data.heroImage}
                  alt={tutorial.data.title}
                  class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-500"
                  loading="lazy"
                />
              ) : (
                <div class="w-full h-full flex items-center justify-center">
                  <div class="w-16 h-10 bg-gradient-to-br from-primary-400 to-accent-400 rounded shadow-lg"></div>
                </div>
              )}
            </div>
            
            <!-- Tutorial Meta -->
            <div class="space-y-3">
              <div class="flex items-center justify-between text-sm">
                <span class="px-2 py-1 bg-primary-500/20 text-primary-300 rounded-full text-xs font-medium">
                  Tutorial
                </span>
                {tutorial.data.difficulty && (
                  <span class="text-xs text-muted-foreground capitalize">
                    {tutorial.data.difficulty}
                  </span>
                )}
              </div>
              
              <h3 class="font-bold text-foreground group-hover:text-primary-400 transition-colors duration-200 line-clamp-2">
                {tutorial.data.title}
              </h3>
              
              <p class="text-sm text-muted-foreground line-clamp-2">
                {tutorial.data.description}
              </p>
              
              <div class="flex items-center justify-between pt-2 text-xs text-muted-foreground">
                <span>By {tutorial.data.author}</span>
                {tutorial.data.estimatedTime && (
                  <span>{tutorial.data.estimatedTime}</span>
                )}
              </div>
            </div>

            <!-- Hidden link for accessibility and SEO -->
            <a href={`/posts/${tutorial.slug}`} class="absolute inset-0" aria-label={`Read ${tutorial.data.title}`}>
              <span class="sr-only">Read {tutorial.data.title}</span>
            </a>
          </article>
        ))}
      </div>
    </section>

  </div>
</BaseLayout>

<style>
  /* Card hover effects */
  .switch-card {
    position: relative;
    overflow: hidden;
  }
  
  .switch-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(58, 155, 220, 0.1), transparent);
    transition: left 0.5s ease;
    pointer-events: none;
    z-index: 1;
  }
  
  .switch-card:hover::before {
    left: 100%;
  }
  
  /* Line clamp utility */
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
  
  .line-clamp-3 {
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>