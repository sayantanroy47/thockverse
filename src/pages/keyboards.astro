---
// Keyboards page - listing keyboard reviews
import BaseLayout from '../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

// Get keyboard content - for now use switches as placeholder
const keyboards = await getCollection('switches');
---

<BaseLayout title="Keyboard Reviews | Thockverse" description="Professional mechanical keyboard reviews and buying guides.">
  <div class="space-y-12">
    <div class="text-center space-y-6">
      <h1 class="text-4xl lg:text-5xl font-bold text-gradient">
        Keyboard Reviews
      </h1>
      <p class="text-xl text-muted-foreground max-w-2xl mx-auto">
        In-depth reviews of premium mechanical keyboards, from 60% compact builds to full-size productivity machines.
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {keyboards.slice(0, 9).map((keyboard, index) => (
        <article class="switch-card group cursor-pointer">
          <div class="aspect-video bg-gradient-to-br from-primary/20 to-accent/20 rounded-xl mb-4 overflow-hidden">
            <div class="w-full h-full flex items-center justify-center">
              <div class="w-20 h-12 bg-gradient-to-br from-primary to-accent rounded shadow-lg"></div>
            </div>
          </div>
          
          <div class="space-y-3">
            <h3 class="font-bold text-lg text-foreground group-hover:text-primary transition-colors duration-200">
              {keyboard.data.title}
            </h3>
            
            <p class="text-sm text-muted-foreground line-clamp-2">
              {keyboard.data.description}
            </p>
            
            <div class="flex items-center justify-between pt-2">
              <span class="text-xs text-muted-foreground">Coming Soon</span>
              <div class="flex items-center gap-1 px-2 py-1 rounded-full bg-gradient-to-r from-accent/20 to-primary/20 border border-accent/30">
                <span class="text-xs font-semibold text-accent">Preview</span>
              </div>
            </div>
          </div>
        </article>
      ))}
    </div>
  </div>
</BaseLayout>