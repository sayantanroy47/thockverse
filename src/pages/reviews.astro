---
// Reviews page - comprehensive switch reviews
import BaseLayout from '../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

// Get all switches for reviews
const switches = await getCollection('switches');
const publishedSwitches = switches.filter(entry => !entry.data.draft);
---

<BaseLayout title="Switch Reviews | Thockverse" description="Comprehensive mechanical keyboard switch reviews with detailed analysis, sound tests, and performance metrics.">
  <div class="space-y-12">
    <div class="text-center space-y-6">
      <h1 class="text-4xl lg:text-5xl font-bold text-gradient">
        Switch Reviews
      </h1>
      <p class="text-xl text-muted-foreground max-w-2xl mx-auto">
        Comprehensive reviews of mechanical keyboard switches with detailed analysis, 
        sound tests, and performance metrics to help you find your perfect switch.
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {publishedSwitches.map((switchItem) => (
        <article class="switch-card group cursor-pointer">
          <a href={`/switches/${switchItem.slug}`} class="block">
            <div class="aspect-video bg-gradient-to-br from-primary/20 to-accent/20 rounded-xl mb-4 overflow-hidden">
              <div class="w-full h-full flex items-center justify-center">
                <div class="w-20 h-12 bg-gradient-to-br from-primary to-accent rounded shadow-lg"></div>
              </div>
            </div>
            
            <div class="space-y-3">
              <h3 class="font-bold text-lg text-foreground group-hover:text-primary transition-colors duration-200">
                {switchItem.data.title}
              </h3>
              
              <p class="text-sm text-muted-foreground line-clamp-2">
                {switchItem.data.description}
              </p>
              
              <div class="flex items-center justify-between pt-2">
                <div class="flex items-center gap-2">
                  <span class="text-xs text-muted-foreground">
                    {switchItem.data.type}
                  </span>
                  <span class="text-xs text-muted-foreground">â€¢</span>
                  <span class="text-xs text-muted-foreground">
                    {switchItem.data.actuation}g
                  </span>
                </div>
                <div class="flex items-center gap-1 px-2 py-1 rounded-full bg-gradient-to-r from-accent/20 to-primary/20 border border-accent/30">
                  <svg class="w-3 h-3 text-accent" fill="currentColor" viewBox="0 0 20 20">
                    <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
                  </svg>
                  <span class="text-xs font-semibold text-accent">
                    {switchItem.data.score}
                  </span>
                </div>
              </div>
            </div>
          </a>
        </article>
      ))}
    </div>
  </div>
</BaseLayout>