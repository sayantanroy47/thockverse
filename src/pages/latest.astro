---
// Latest page - showing latest switch reviews and content
import BaseLayout from '../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

// Get latest content from all collections
const switches = await getCollection('switches');
const publishedSwitches = switches.filter(entry => !entry.data.draft);

// Sort by date (newest first)
publishedSwitches.sort((a, b) => {
  const dateA = a.data.publishedAt || a.data.date || new Date('2024-01-01');
  const dateB = b.data.publishedAt || b.data.date || new Date('2024-01-01');
  return new Date(dateB).getTime() - new Date(dateA).getTime();
});

const latestContent = publishedSwitches.slice(0, 12);
---

<BaseLayout title="Latest Reviews | Thockverse" description="The latest mechanical keyboard switch reviews, news, and tutorials from Thockverse.">
  <div class="space-y-12">
    <div class="text-center space-y-6">
      <h1 class="text-4xl lg:text-5xl font-bold text-gradient">
        Latest Reviews
      </h1>
      <p class="text-xl text-muted-foreground max-w-2xl mx-auto">
        Stay up to date with our newest switch reviews, tutorials, and industry insights. 
        Fresh content delivered regularly.
      </p>
    </div>

    <!-- Featured Latest Review -->
    {latestContent.length > 0 && (
      <div class="switch-card bg-gradient-to-r from-primary/10 to-accent/10 border-primary/20">
        <div class="flex flex-col lg:flex-row gap-8">
          <div class="lg:flex-1">
            <div class="flex items-center gap-2 mb-4">
              <span class="px-3 py-1 bg-primary rounded-full text-xs font-medium text-white">Latest</span>
              <span class="text-sm text-muted-foreground">Just Published</span>
            </div>
            
            <h2 class="text-3xl font-bold text-foreground mb-4">
              <a href={`/switches/${latestContent[0].slug}`} class="hover:text-primary transition-colors">
                {latestContent[0].data.title}
              </a>
            </h2>
            
            <p class="text-muted-foreground leading-relaxed mb-6">
              {latestContent[0].data.description}
            </p>
            
            <div class="flex items-center justify-between">
              <div class="flex items-center gap-4">
                <span class="text-sm text-muted-foreground">
                  {latestContent[0].data.type}
                </span>
                <span class="text-sm text-muted-foreground">•</span>
                <span class="text-sm text-muted-foreground">
                  {latestContent[0].data.actuation}g actuation
                </span>
              </div>
              
              <a href={`/switches/${latestContent[0].slug}`} class="btn-glow">
                Read Review
              </a>
            </div>
          </div>
          
          <div class="lg:flex-shrink-0 lg:w-80">
            <div class="aspect-video bg-gradient-to-br from-primary/30 to-accent/30 rounded-xl flex items-center justify-center">
              <div class="w-24 h-16 bg-gradient-to-br from-primary to-accent rounded shadow-lg"></div>
            </div>
          </div>
        </div>
      </div>
    )}

    <!-- Latest Content Grid -->
    <div class="space-y-8">
      <div class="flex items-center justify-between">
        <h2 class="text-2xl font-bold text-foreground">Recent Reviews</h2>
        <a href="/switches" class="text-primary hover:text-accent transition-colors text-sm font-medium">
          View All →
        </a>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {latestContent.slice(1).map((item) => (
          <article class="switch-card group cursor-pointer">
            <a href={`/switches/${item.slug}`} class="block">
              <div class="aspect-video bg-gradient-to-br from-primary/20 to-accent/20 rounded-xl mb-4 overflow-hidden">
                <div class="w-full h-full flex items-center justify-center">
                  <div class="w-20 h-12 bg-gradient-to-br from-primary to-accent rounded shadow-lg"></div>
                </div>
              </div>
              
              <div class="space-y-3">
                <div class="flex items-center justify-between">
                  <span class="text-xs text-accent font-medium px-2 py-1 bg-accent/20 rounded-full">
                    {item.data.type}
                  </span>
                  <span class="text-xs text-muted-foreground">
                    {new Date(item.data.publishedAt || item.data.date || '2024-01-01').toLocaleDateString('en-US', {
                      month: 'short',
                      day: 'numeric'
                    })}
                  </span>
                </div>
                
                <h3 class="font-bold text-lg text-foreground group-hover:text-primary transition-colors duration-200">
                  {item.data.title}
                </h3>
                
                <p class="text-sm text-muted-foreground line-clamp-2">
                  {item.data.description}
                </p>
                
                <div class="flex items-center justify-between pt-2">
                  <div class="flex items-center gap-2">
                    <span class="text-xs text-muted-foreground">
                      {item.data.actuation}g
                    </span>
                    <span class="text-xs text-muted-foreground">•</span>
                    <span class="text-xs text-muted-foreground">
                      {item.data.travel}mm travel
                    </span>
                  </div>
                  <div class="flex items-center gap-1 px-2 py-1 rounded-full bg-gradient-to-r from-accent/20 to-primary/20 border border-accent/30">
                    <svg class="w-3 h-3 text-accent" fill="currentColor" viewBox="0 0 20 20">
                      <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
                    </svg>
                    <span class="text-xs font-semibold text-accent">
                      {item.data.score}
                    </span>
                  </div>
                </div>
              </div>
            </a>
          </article>
        ))}
      </div>
    </div>

    <!-- Newsletter Signup -->
    <div class="switch-card bg-gradient-to-r from-primary/10 to-accent/10 border-primary/20">
      <div class="text-center space-y-6">
        <h3 class="text-2xl font-bold text-foreground">Stay Updated</h3>
        <p class="text-muted-foreground max-w-2xl mx-auto">
          Get notified when we publish new reviews. No spam, just the latest 
          keyboard content delivered to your inbox.
        </p>
        <div class="flex flex-col sm:flex-row gap-3 max-w-md mx-auto">
          <input 
            type="email" 
            placeholder="your@email.com"
            class="flex-1 px-4 py-3 rounded-lg bg-background border border-border text-foreground placeholder-muted-foreground focus-space"
          >
          <button class="btn-glow">Subscribe</button>
        </div>
      </div>
    </div>
  </div>
</BaseLayout>