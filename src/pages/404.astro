---
// 404 Error page with space theme
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout 
  title="404 - Page Not Found | Thockverse"
  description="The page you're looking for has drifted into deep space. Let's get you back on course."
  showSidebar={false}
>
  <div class="min-h-[60vh] flex items-center justify-center">
    <div class="text-center space-y-8 max-w-2xl mx-auto">
      
      <!-- Floating 404 with orbiting elements -->
      <div class="relative mb-12">
        <div class="text-8xl lg:text-9xl font-bold text-gradient mb-4 relative">
          404
          
          <!-- Orbiting asteroids around 404 -->
          <div class="absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 pointer-events-none">
            <div class="w-32 h-32">
              <div class="orbital" style="animation-duration: 15s;">
                <div class="w-3 h-3 bg-accent-400 rounded-full absolute top-0 left-16 opacity-60"></div>
              </div>
            </div>
            <div class="w-48 h-48 absolute -top-8 -left-8">
              <div class="orbital" style="animation-duration: 20s; animation-delay: -5s;">
                <div class="w-2 h-2 bg-primary-400 rounded-full absolute top-0 left-24 opacity-40"></div>
              </div>
            </div>
            <div class="w-64 h-64 absolute -top-16 -left-16">
              <div class="orbital" style="animation-duration: 25s; animation-delay: -10s;">
                <div class="w-4 h-4 bg-yellow-400 rounded-full absolute top-0 left-32 opacity-50"></div>
              </div>
            </div>
          </div>
        </div>
        
        <!-- Floating particles -->
        <div class="absolute inset-0 overflow-hidden pointer-events-none">
          <div class="absolute top-20 left-10 w-1 h-1 bg-primary-400 rounded-full animate-pulse float-animation"></div>
          <div class="absolute top-32 right-16 w-2 h-2 bg-accent-400 rounded-full animate-pulse float-animation" style="animation-delay: 0.5s;"></div>
          <div class="absolute bottom-20 left-20 w-1 h-1 bg-primary-300 rounded-full animate-pulse float-animation" style="animation-delay: 1s;"></div>
        </div>
      </div>

      <div class="space-y-6">
        <h1 class="text-3xl lg:text-4xl font-bold text-foreground">
          Lost in Deep Space
        </h1>
        
        <p class="text-xl text-muted-foreground leading-relaxed">
          The page you're looking for has drifted into the void between switches. 
          Don't worry, even the best space explorers get lost sometimes.
        </p>
        
        <p class="text-lg text-muted-foreground">
          Let's navigate you back to familiar territory.
        </p>
      </div>

      <!-- Action buttons -->
      <div class="flex flex-col sm:flex-row gap-4 justify-center items-center pt-8">
        <a 
          href="/"
          class="btn-glow text-lg inline-flex items-center space-x-2"
        >
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"/>
          </svg>
          <span>Return to Base</span>
        </a>
        
        <a 
          href="/switches"
          class="px-8 py-3 text-lg font-medium border border-primary-500/50 rounded-lg hover:border-primary-400 hover:bg-primary-500/10 transition-all duration-300 inline-flex items-center space-x-2"
        >
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
          </svg>
          <span>Explore Switches</span>
        </a>
      </div>

      <!-- Search suggestion -->
      <div class="pt-8 border-t border-white/10 max-w-md mx-auto">
        <p class="text-sm text-muted-foreground mb-4">
          Or search for what you're looking for:
        </p>
        <div class="relative">
          <input 
            id="search-404"
            type="search" 
            placeholder="Search switches, reviews..."
            class="w-full px-4 py-3 pl-12 rounded-lg bg-input border border-border text-foreground placeholder-muted-foreground focus-space"
          />
          <div class="absolute inset-y-0 left-0 pl-4 flex items-center pointer-events-none">
            <svg class="h-5 w-5 text-muted-foreground" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
            </svg>
          </div>
        </div>
      </div>

      <!-- Popular pages -->
      <div class="pt-8">
        <h2 class="text-lg font-semibold text-foreground mb-4">Popular Destinations</h2>
        <div class="flex flex-wrap justify-center gap-4">
          <a 
            href="/posts/cherry-mx-blue"
            class="px-4 py-2 text-sm bg-input/50 border border-border rounded-lg hover:border-primary-400 hover:bg-primary-500/10 transition-colors duration-200"
          >
            Cherry MX Blue Review
          </a>
          <a 
            href="/posts/gateron-oil-kings"
            class="px-4 py-2 text-sm bg-input/50 border border-border rounded-lg hover:border-primary-400 hover:bg-primary-500/10 transition-colors duration-200"
          >
            Gateron Oil Kings
          </a>
          <a 
            href="/posts/holy-panda"
            class="px-4 py-2 text-sm bg-input/50 border border-border rounded-lg hover:border-primary-400 hover:bg-primary-500/10 transition-colors duration-200"
          >
            Holy Panda
          </a>
        </div>
      </div>
    </div>
  </div>
</BaseLayout>

<script>
  // 404 page search functionality
  const search404 = document.getElementById('search-404');
  
  search404?.addEventListener('keypress', (e) => {
    if (e.key === 'Enter') {
      const query = search404.value.trim();
      if (query) {
        // Navigate to search page with query
        window.location.href = `/search?q=${encodeURIComponent(query)}`;
      }
    }
  });
  
  // Add some interactive particle effects
  function createFloatingParticle() {
    const particle = document.createElement('div');
    particle.className = 'fixed w-1 h-1 bg-primary-400 rounded-full animate-pulse pointer-events-none z-0';
    particle.style.left = Math.random() * 100 + 'vw';
    particle.style.top = Math.random() * 100 + 'vh';
    particle.style.animationDuration = (2 + Math.random() * 3) + 's';
    particle.style.opacity = Math.random() * 0.5 + 0.2;
    
    document.body.appendChild(particle);
    
    // Remove particle after animation
    setTimeout(() => {
      particle.remove();
    }, 5000);
  }
  
  // Create particles periodically
  setInterval(createFloatingParticle, 3000);
</script>

<style>
  /* Enhanced orbital animation */
  .orbital {
    animation: orbit 15s linear infinite;
  }
  
  /* Floating animation for 404 text */
  .text-8xl,
  .text-9xl {
    animation: float 4s ease-in-out infinite;
  }
  
  /* Particle trail effect on hover */
  .btn-glow:hover {
    position: relative;
    overflow: visible;
  }
  
  .btn-glow:hover::after {
    content: '';
    position: absolute;
    top: 50%;
    left: 50%;
    width: 100%;
    height: 100%;
    background: radial-gradient(circle, rgba(58, 155, 220, 0.2) 0%, transparent 70%);
    border-radius: inherit;
    transform: translate(-50%, -50%);
    animation: pulse-expand 1s ease-out infinite;
    z-index: -1;
  }
  
  @keyframes pulse-expand {
    0% {
      transform: translate(-50%, -50%) scale(1);
      opacity: 0.6;
    }
    100% {
      transform: translate(-50%, -50%) scale(1.5);
      opacity: 0;
    }
  }
  
  /* Responsive adjustments */
  @media (max-width: 768px) {
    .orbital {
      display: none; /* Hide orbital elements on mobile for performance */
    }
  }
</style>